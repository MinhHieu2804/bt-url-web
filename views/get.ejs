<!DOCTYPE html>
<html>
    <head>
	<meta charset="utf-8">
</head>
<body>
	<div class="output"></div>
	Mã sinh viên: <input type="text" class="masv"> <br>
	
	<button class="submit">Xem thông tin</button>

	<script>
		document.querySelector("button.submit").onclick = function() {
			fetch("/api/students/" + document.querySelector("input.masv").value)
			.then(response => response.json())
            .then(data => {
                const item = data.data;
                document.querySelector("div.output").innerHTML = `Name: ${item.name} - MSV: ${item.msv}`;	
		  })
		};
	</script>
</body>
</html>